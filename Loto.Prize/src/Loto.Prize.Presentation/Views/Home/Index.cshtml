@model JogoModel
@{
    ViewData["Title"] = "Home Page";
}



<div class="row mh-100">
    <div class="text-center border col-10" style="min-height:25vh;">
        <h1 class="display-4">MEGA-SENA</h1>
    </div>
    <div class="border border-warning col-5 h-50" id="resultados" style="min-height: 75vh;">
        <h3>Ultimos Resultados</h3>
        <p>Data de sorteio <strong>@Model.DataSorteio.ToString("dd/MM/yyyy")</strong></p>
        <h2>Premio @Model.Premio</h2>
        <div class="d-flex flex-row" id="Sorteio88">
            @if (Model != null)
            {
                @foreach (var numero in Model.NumerosSorteados.Split(";").ToList())
                {
                    <p class="resultado-loteria">@numero</p>
                }
            }
        </div>
    </div>
    <div class="border border-danger col-5 h-auto" id="numerosMaisSorteados">
        <h3 class="">Novo Jogo!</h3>
        <div class="d-flex flex-row">
            <a asp-controller="Volante" asp-action="Create">Crie seu novo jogo!</a>
        </div>
    </div>
</div>
<div class="row border border-warning col-4">
    <div class="col-sm border border-warning">
        One of three columns
    </div>
</div>
<div class="row border border-warning col-4">
    <div class="col-sm border border-warning">
        One of three columns
    </div>
</div>