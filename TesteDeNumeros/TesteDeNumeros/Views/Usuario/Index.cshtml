@model IEnumerable<UsuariosModel>

 <div class="container">

     <div class="d-flex justify-content-between align-items-center mb-5">
         <h1>Usuários</h1>
         <a class="btn btn-success mx-2" asp-controller="Usuario" asp-action="Cadastrar">Cadastrar novo Usuario</a>
     </div>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Data de criação</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach(var usuarios in Model)
                {
                 <tr>
                        <th>@usuarios.Id</th>
                        <th>@usuarios.Nome</th>
                        <td>@usuarios.Email</td>
                        <td>@usuarios.DataCriacao</td>
                    <td>
                        <a class="btn btn-warning mx-2" asp-controller="Usuario" asp-action="Editar" asp-route-id="@usuarios.Id">Editar</a>
                         <a class="btn btn-danger mx-2" asp-controller="Usuario" asp-action="ApagarConfirmacao" asp-route-id="@usuarios.Id">Excluir</a>
                    </td>
                 </tr>
                }
            }
        </tbody>
    </table>

</div>